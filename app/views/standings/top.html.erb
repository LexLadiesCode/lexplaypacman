<div class="row">
  <div class="col-md-5">
    <div class="panel panel-default">
      <div class="panel-heading">
        <h2 class="panel-title">
          <i class="fa fa-trophy"></i>
          High Scores
        </h2>
      </div>
      <div class="panel-body">
        <table class="table table-striped standings-table">
          <thead>
            <tr>
              <th>Rank</th>
              <th class="text-center">Score</th>
              <th class="text-right">Name</th>
              <th></th>
            </tr>
          </thead>
          <tbody>
            <% @standings.each_with_index do |standing, index| %>
              <tr class="standing-row row-<%= index + 1 %>">
                <td>
                  <%= link_to standing.rank.ordinalize, standing %>
                </td>
                <td class="text-center">
                  <%= link_to standing.score, standing %>
                </td>
                <td class="text-right">
                  <%= link_to standing.initials, standing %>
                </td>
                <td>
                  <% if location=standing.location %>
                    <%# TODO: link to individual location page %>
                    <%= link_to locations_path do %>
                      <i class="fa fa-map-marker" title="<%= location.name %>" data-toggle="tooltip"></i>
                    <% end %>
                  <% end %>
                </td>
              </tr>
            <% end %>
          </tbody>
        </table>
      </div>
      <div class="panel-footer">
        <div class="row">
          <div class="col-xs-6 text-left">
            <%= link_to new_standing_path do %>
              <i class="glyphicon glyphicon-plus"></i>
              Submit your score
            <% end %>
          </div>
          <div class="col-xs-6 text-right">
            <%= link_to standings_path do %>
              <i class="fa fa-align-justify"></i>
              View all scores
            <% end %>
          </div>
        </div>
      </div>
    </div>
  </div>
  <div class="col-md-7">
    <div class="panel panel-default">
      <div class="panel-heading">
        <h2 class="panel-title">
          <i class="fa fa-map-marker"></i>
          Where to Play
        </h2>
      </div>
      <div class="panel-body">
        <p><iframe src="https://mapsengine.google.com/map/embed?mid=z8Dq9FBB-LQ4.kiumuL065mOE" width="100%" height="436" ></iframe></p>
      </div>
      <div class="panel-footer">
        <div class="row">
          <div class="col-xs-6 text-left">
            <%= link_to locations_path do %>
              <i class="fa fa-globe"></i>
              View all arcade locations
            <% end %>
          </div>
          <div class="col-xs-6 text-right">
            <%= mail_to "ewarner@lexpublib.org", subject: "You're missing a Pac-Man or Ms. Pac-Man machine!" do %>
              <i class="glyphicon glyphicon-question-sign"></i>
              Are we missing a location? Let us know!
            <% end %>
          </div>
        </div>
  </div>
</div>
