<%= form_for(@standing, html: {class: 'form-horizontal', role: 'form'}) do |f| %>
  <% if @standing.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(@standing.errors.count, "error") %> kept your high score from being saved:</h2>

      <ul>
        <% @standing.errors.full_messages.each do |msg| %>
          <li><%= msg %></li>
        <% end %>
      </ul>
    </div>
  <% end %>

  <div class="form-group">
    <%= f.label :initials, 'Your initials:', class: 'col-md-3 control-label' %>
    <div class="col-md-9">
      <%= f.text_field :initials, class: 'form-control' %>
    </div>
  </div>
  <div class="form-group">
    <%= f.label :score, 'Your score:', class: 'col-md-3 control-label' %>
    <div class="col-md-9">
      <%= f.number_field :score, class: 'form-control' %>
    </div>
  </div>
  <div class="form-group">
    <%= f.label :location_id, 'Where did you play?', class: 'col-md-3 control-label' %>
    <div class="col-md-9">
      <%= f.select :location_id, Location.all.map {|location| [location.description, location.id]}, {}, {class: 'form-control'} %>
    </div>
  </div>
  <div class="form-group">
    <div class="col-md-9 col-md-offset-3">
      <%= f.submit 'Save High Score', class: 'btn btn-primary' %>
    </div>
  </div>
<% end %>
